{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Kapusta",
    "description": "Home accounting app",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [{ "url": "http://localhost:3001" }],
  "tags": [
    {
      "name": "Registration",
      "description": "Registration endpoints"
    },
    {
      "name": "Login",
      "description": "Login endpoints"
    },
     {
      "name": "Logout",
      "description": "Logout endpoints"
    }
  ],
  "paths": {
    "/api/users/signup": {
      "post": {
        "tags": ["Registration"],
        "summary": "User registration",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },
          "409": {
            "description": "Email in use",
            "content": {}
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": ["Login"],
        "summary": "User log in",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "Email or password is wrong",
            "content": {}
          }
        }
      }
    },
    "/api/users/logout": {
      "post": {
        "tags": ["Logout"],
        "summary": "User log out",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogoutRequest"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success",
            "content": {}
          },
          "401": {
            "description": "Not authorized",
            "content": {} 
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email",
            "example": "user@meta.ua"
          },
          "password": {
            "type": "string",
            "description": "User's password",
             "example": "12345678"
          }
        }
      },
      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "request status",
            "example": "success"
          },
          "code": {
            "type": "integer",
            "description": "status code",
            "example": 201
          },
          "user": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email",
                "example": "user@meta.ua"
              }
            }
          }
        },
        "example":{ 
          "status": "success",
          "code": 201,
          "user": {
            "email": "user@meta.ua"
          }
        }
      },
      "LoginRequest": {
      "type": "object",
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string",
          "description": "User's email",
          "format": "email",
          "example": "user@meta.ua"
        },
        "password": {
          "type": "string",
          "description": "User's password",
          "example": "12345678"
        }
      }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "token",
            "example": "jwtToken"
          },
          "user": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email",
                "example": "user@meta.ua"
              }
            }
          }
          
        },
        "example": {
          "token": "jwtToken",
          "user": {
            "email": "user@meta.ua"
          }
        }
      },
      "LogoutRequest": {
        "type": "object",
        "required": ["id", "token"],
        "properties": {
          "id": {
            "type": "string",
            "description": "User's id",
            "example": "135487845"
          },
          "token": {
            "type": "string",
            "description": "User's token",
            "example": "jwtToken"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}