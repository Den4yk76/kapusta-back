{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Kapusta",
    "description": "Home accounting app",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [{ "url": "http://localhost:3001",  "description": "API base URL" }],
  "paths": {
    "/api/users/signup": {
      "post": {
        "tags": ["User"],
        "summary": "User registration",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
              }
            }
          },
          "409": {
            "description": "Email in use",
            "content": {}
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": ["User"],
        "summary": "User log in",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "Email or password is wrong",
            "content": {}
          }
        }
      }
    },
    "/api/users/logout": {
      "post": {
        "tags": ["User"],
        "summary": "User log out",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LogoutRequest"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Success",
            "content": {}
          }
        }
      }
    },
    "/api/operations/balance": {
      "patch": {
        "tags": ["User"],
        "summary": "Update user balance",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateBalanceRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateBalanceResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/operations/income": {
      "post": {
        "tags": ["Operations"],
        "summary": "Income transaction",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IncomeTransactionRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IncomeTransactionResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/operations/expense":{
      "post": {
        "tags": ["Operations"],
        "summary": "Expense transaction",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ExpenseTransactionRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExpenseTransactionResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/operations/income/:id":{},
    "/api/operations/expense/:id":{},
    "/api/reports/income":{},
    "/api/reports/expense":{}
  },
  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email",
            "example": "user@meta.ua"
          },
          "password": {
            "type": "string",
            "description": "User's password",
             "example": "12345678"
          }
        }
      },
      "RegistrationResponse": {
        "type": "object",
        "required": ["user", "status", "code"],
        "properties": {
          "status": {
            "type": "string",
            "description": "response status",
            "example": "OK"
          },
          "code": {
            "type": "string",
            "description": "response status code",
            "example": "200"
          },
          "user": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email",
                "example": "user@meta.ua"
              }
            }
          }
        },
        "example":{ 
          "status": "success",
          "code": 201,
          "user": {
            "email": "user@meta.ua"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email",
            "example": "user@meta.ua"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "12345678"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "required": ["user", "status", "code"],
        "properties": {
          "status": {
            "type": "string",
            "description": "response status",
            "example": "OK"
          },
          "code": {
            "type": "string",
            "description": "response status code",
            "example": "200"
          },
          "user": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string",
                "description": "token",
                "example": "jwtToken"
              },
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email",
                "example": "user@meta.ua"
              }
            }
          }
        },
        "example": {
          "status": "success",
          "code": 201,
          "user": {
            "token": "jwtToken",
            "user": {
              "email": "user@meta.ua"
            }
          } 
        }
      },
      "LogoutRequest": {
        "type": "object",
        "required": ["id", "token"],
        "properties": {
          "id": {
            "type": "string",
            "description": "User's id",
            "example": "135487845"
          },
          "token": {
            "type": "string",
            "description": "User's token",
            "example": "jwtToken"
          }
        }
      }, 
      "UpdateBalanceRequest": {
        "type": "object",
        "required": ["balance"],
        "properties": {
          "balance": {
            "type": "string",
            "description": "User's balance",
            "example": "10000"
          }
        }
      },
      "UpdateBalanceResponse": {
        "type": "object",
        "required": ["user", "status", "code"],
        "properties": {
          "status": {
            "type": "string",
            "description": "response status ",
            "example": "OK"
          },
          "code": {
            "type": "string",
            "description": "response status code",
            "example": "200"
          },
          "user": {
            "type": "object",
            "required": ["balance"],
            "properties": {
              "balance": {
                "type": "number",
                "description": "User's balance",
                "example": 1000
              }
            }
          }
        },
        "example":{ 
          "status": "success",
          "code": 200,
          "user": {
            "balance": "10000"
          }
        }
      },
      "IncomeTransactionRequest": {
        "type": "object",
        "required": ["date", "category", "count", "description"],
        "properties": {
          "date": {
            "type": "integer",
            "description": "date of creation",
            "example": 1643857200
          },
          "category": {
            "type": "string",
            "description": "income category",
            "example": "Salary"
          },
           "count": {
            "type": "string",
            "description": "income amount",
            "example": "5000"
          },
           "description": {
            "type": "string",
            "description": "My salary",
            "example": "My salary"
          }
        }
      },
      "IncomeTransactionResponse": {
        "type": "object",
        "required": ["newBalance", "status", "code"],
        "properties": {
          "status": {
            "type": "string",
            "description": "response status ",
            "example": "CREATED"
          },
          "code": {
            "type": "string",
            "description": "response status code",
            "example": "201"
          },
          "newBalance": {
            "type": "object",
            "properties": {
              "balance": {
                "type": "number",
                "description": "response status ",
                "example": 5000
              }
            }
          }
        },
        "example":{ 
          "status": "success",
          "code": 201,
          "user": {
            "balance": 5000
          }
        }
      },
      "ExpenseTransactionRequest": {
        "type": "object",
        "required": ["date", "category", "count", "description"],
        "properties": {
          "date": {
            "type": "integer",
            "description": "date of creation",
            "example": 1643857200
          },
          "category": {
            "type": "string",
            "description": "expense category",
            "example": "Expense"
          },
           "count": {
            "type": "string",
            "description": "expense amount",
            "example": "5000"
          },
           "description": {
            "type": "string",
            "description": "My expense",
            "example": "My expense"
          }
        }
      },
      "ExpenseTransactionResponse": {
        "type": "object",
        "required": ["newBalance", "status", "code"],
        "properties": {
          "status": {
            "type": "string",
            "description": "response status ",
            "example": "CREATED"
          },
          "code": {
            "type": "string",
            "description": "response status code",
            "example": "201"
          },
          "newBalance": {
            "type": "object",
            "properties": {
              "balance": {
                "type": "number",
                "description": "response status ",
                "example": 2000
              }
            }
          }
      },
      "example":{ 
          "status": "success",
          "code": 201,
          "user": {
            "balance": 2000
          }
      }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}